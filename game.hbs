  <script>
  //document.getElementById("hasil_gambar").src = "assets/VS.png";
   document.getElementById("button_hasil").className = "btn btn-block btn-light";
   document.getElementById('button_hasil').innerText = 'VS';
	function ambil_nilai(clicked_id)
	{
		///////Ini Buat kondisi ngeblock yang kita pilih. kita ngasih warna berdasarkan id unik yang diatas. Kalo mau ganti warnanya tinggal ganti di yang setelah = aja "grey"
		//////codingan untuk yang = "" supaya warna yang selain kita pilih ngga nyangkut
		if(clicked_id==='Batu')
		{
			document.getElementById('batu_saya').style.backgroundColor = "grey";
			document.getElementById('gunting_saya').style.backgroundColor = "";
			document.getElementById('kertas_saya').style.backgroundColor = "";
			
		}
		else if(clicked_id==='Gunting')
		{
			document.getElementById('batu_saya').style.backgroundColor = "";
			document.getElementById('gunting_saya').style.backgroundColor = "grey";
			document.getElementById('kertas_saya').style.backgroundColor = "";
		}
		else if(clicked_id==='Kertas')
		{
			document.getElementById('batu_saya').style.backgroundColor = "";
			document.getElementById('gunting_saya').style.backgroundColor = "";
			document.getElementById('kertas_saya').style.backgroundColor = "grey";
		}
				
		var pilihan_bot = Array(1,2,3);
		
		var random = pilihan_bot[Math.floor(Math.random() * pilihan_bot.length)];
		
		if(random===1)
		{
			var descp = "Batu";
			///////ini kondisi buat ngeblock yang randomnya lawan, cara kerjanya sama dengan yang diatas. 
			document.getElementById('batu_lawan').style.backgroundColor = "grey";
			document.getElementById('gunting_lawan').style.backgroundColor = "";
			document.getElementById('kertas_lawan').style.backgroundColor = "";
		}
		else if(random===2)
		{
			var descp = "Gunting";
			document.getElementById('batu_lawan').style.backgroundColor = "";
			document.getElementById('gunting_lawan').style.backgroundColor = "grey";
			document.getElementById('kertas_lawan').style.backgroundColor = "";
		}
		else
		{
			var descp = "Kertas";
			document.getElementById('batu_lawan').style.backgroundColor = "";
			document.getElementById('gunting_lawan').style.backgroundColor = "";
			document.getElementById('kertas_lawan').style.backgroundColor = "grey";
			
		}
		
		if(clicked_id==='Batu' && descp==='Batu')
		{
			var hasil="Seri";
		}
		else if (clicked_id==='Batu' && descp==='Gunting')
		{
			var hasil="Menang";
		}
		else if (clicked_id==='Batu' && descp==='Kertas')
		{
			var hasil="Kalah";
		}
		else if (clicked_id==='Gunting' && descp==='Batu')
		{
			var hasil="Kalah";
		}
		else if (clicked_id==='Gunting' && descp==='Gunting')
		{
			var hasil="Seri";
		}
		else if (clicked_id==='Gunting' && descp==='Kertas')
		{
			var hasil="Menang";
		}
		else if (clicked_id==='Kertas' && descp==='Batu')
		{
			var hasil="Menang";
		}
		else if (clicked_id==='Kertas' && descp==='Gunting')
		{
			var hasil="Kalah";
		}
		else if (clicked_id==='Kertas' && descp==='Kertas')
		{
			var hasil="Seri";
		}
		
		
		alert(clicked_id+' VS '+descp+'\r\nAnda '+hasil);
		
		
		if(hasil==='Kalah')
		{
			//document.getElementById("hasil_gambar").src = "assets/kalah.png";
            document.getElementById("button_hasil").className = "btn btn-sm btn-danger";
            document.getElementById('button_hasil').innerText = 'Anda Kalah';
		}
		else if(hasil==='Menang')
		{
			//document.getElementById("hasil_gambar").src = "assets/menang.png";
            document.getElementById("button_hasil").className = "btn btn-sm btn-success";
            document.getElementById('button_hasil').innerText = 'Anda Menang';
		}
		else if(hasil==='Seri')
		{
			//document.getElementById("hasil_gambar").src = "assets/seri.png";
            document.getElementById("button_hasil").className = "btn btn-sm btn-warning";
            document.getElementById('button_hasil').innerText = 'Seri';
		}
	}
	
	function refresh(clicked_id)
