        document.getElementById('button_hasil').innerText = 'VS';
		
		///ini buat ngosongin warna pas kita pilih mulai main dari awal
		document.getElementById('batu_saya').style.backgroundColor = "";
		document.getElementById('gunting_saya').style.backgroundColor = "";
		document.getElementById('kertas_saya').style.backgroundColor = "";
		document.getElementById('batu_lawan').style.backgroundColor = "";
		document.getElementById('gunting_lawan').style.backgroundColor = "";
